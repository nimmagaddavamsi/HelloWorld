import java.io.File;
import java.io.FileWriter;
import java.io.IOException;

public class ResourceFolderAndFileCreator {

    public static void main(String[] args) {
        createFolderAndFile("new_folder", "new_file.txt");
    }

    public static void createFolderAndFile(String folderName, String fileName) {
        // Path to the src/main/resources directory
        String resourcesPath = "src/main/resources/";

        // Create a new folder
        File folder = new File(resourcesPath + folderName);
        if (!folder.exists()) {
            folder.mkdirs(); // Make directories recursively
            System.out.println("Folder created: " + folder.getAbsolutePath());
        } else {
            System.out.println("Folder already exists: " + folder.getAbsolutePath());
        }

        // Create a new file within the folder
        File file = new File(folder, fileName);
        try {
            if (file.createNewFile()) {
                System.out.println("File created: " + file.getAbsolutePath());
                // You can write content to the file here if needed
            } else {
                System.out.println("File already exists: " + file.getAbsolutePath());
            }
        } catch (IOException e) {
            e.printStackTrace();
        }
    }
}
